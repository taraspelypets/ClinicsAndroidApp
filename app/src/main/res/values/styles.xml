<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Search" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchIcon">@drawable/ic_search_white_24dp</item>
        <item name="closeIcon">@drawable/ic_close_black_24dp</item>
        <item name="queryBackground">@drawable/card_background</item>

    </style>

    <style name="ContactText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorAccent</item>

    </style>

    <style name="FragmentAppBar" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="FragmentTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
